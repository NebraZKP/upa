{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "composite": true,
    "declaration": true,
    "sourceMap": true,
  },
  "files": [
    "./hardhat.config.ts"
  ],
  "include": [
    "package.json",
    "src/**/*.ts",
    "typechain-types/**/*.ts",
    "test/**/*.ts"
  ]
}
